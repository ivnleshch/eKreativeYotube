<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SecondaryText" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="PrimaryText" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <!-- Login activity theme -->
    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/colorIcons</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
